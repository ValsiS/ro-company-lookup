{
    "name": "valsis/ro-company-lookup",
    "description": "Lookup Romanian company data by CUI via ANAF public web services.",
    "type": "library",
    "keywords": [
        "anaf",
        "romania",
        "cui",
        "company",
        "lookup",
        "laravel",
        "package"
    ],
    "homepage": "https://github.com/ValsiS/ro-company-lookup",
    "license": "MIT",
    "authors": [
        {
            "name": "Valentin Cristian Stan",
            "email": "maintainer@example.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/cache": "^12.0",
        "illuminate/http": "^12.0",
        "illuminate/support": "^12.0",
        "spatie/laravel-data": "^4.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "mockery/mockery": "^1.6",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^11.0 || ^12.0"
    },
    "autoload": {
        "psr-4": {
            "Valsis\\RoCompanyLookup\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Valsis\\RoCompanyLookup\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "format": "vendor/bin/pint",
        "lint": "vendor/bin/pint --test",
        "test": "vendor/bin/phpunit",
        "validate": "composer validate --strict",
        "analyse": "vendor/bin/phpstan analyse --memory-limit=1G",
        "ci": [
            "@lint",
            "@validate",
            "@analyse",
            "@test"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Valsis\\RoCompanyLookup\\RoCompanyLookupServiceProvider"
            ],
            "aliases": {
                "RoCompanyLookup": "Valsis\\RoCompanyLookup\\Facades\\RoCompanyLookup"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.3.0"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
